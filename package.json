{
  "name": "create-t3-turbo",
  "private": true,
  "engines": {
    "node": ">=v18.16.1"
  },
  "packageManager": "pnpm@8.6.3",
  "scripts": {
    "reinstall": "pnpm clean:workspaces && pnpm i",
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "db:generate": "pnpm with-env turbo db:generate",
    "db:push": "pnpm with-env turbo db:push",
    "dev": "FORCE_COLOR=1 pnpm with-env turbo dev --parallel --concurrency 20",
    "dev:dashboard": "pnpm dev --filter @acme/dashboard --filter @acme/ui --filter @acme/editor",
    "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,md,json}\" --ignore-path .gitignore",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "prepare": "husky install",
    "with-env": "doppler run --"
  },
  "dependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@ianvs/prettier-plugin-sort-imports": "^4.0.2",
    "@types/prettier": "^2.7.3",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "turbo": "^1.10.6",
    "typescript": "^5.1.3"
  }
}