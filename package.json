{
  "name": "create-t3-turbo",
  "private": true,
  "engines": {
    "node": ">=v18.16.0"
  },
  "workspaces": {
    "packages": [
      "packages/ui",
      "packages/emails",
      "packages/db",
      "packages/config/*",
      "packages/auth",
      "apps/dashboard",
      "apps/api"
    ]
  },
  "scripts": {
    "reinstall": "yarn clean:workspaces && yarn i",
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "db:generate": "yarn with-env turbo db:generate",
    "db:push": "yarn with-env turbo db:push db:generate",
    "dev": "yarn with-env turbo dev --parallel",
    "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,md,json}\" --ignore-path .gitignore",
    "lint": "turbo lint && manypkg check",
    "lint:fix": "turbo lint:fix && manypkg fix",
    "type-check": "turbo type-check",
    "prepare": "husky install",
    "with-env": "doppler run --"
  },
  "dependencies": {
    "@acme/eslint-config": "^0.1.0",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@ianvs/prettier-plugin-sort-imports": "^3.7.2",
    "@manypkg/cli": "^0.20.0",
    "@types/prettier": "^2.7.2",
    "eslint": "^8.40.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "turbo": "^1.9.4",
    "typescript": "^5.0.4"
  }
}