{
  "name": "create-t3-turbo",
  "private": true,
  "engines": {
    "node": ">=v18.17.0"
  },
  "packageManager": "pnpm@8.6.12",
  "scripts": {
    "reinstall": "pnpm clean:workspaces && pnpm i",
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "db:generate": "pnpm with-env turbo db:generate",
    "db:push": "pnpm with-env turbo db:push",
    "db:studio": "pnpm with-env turbo db:studio",
    "dev": "pnpm with-env turbo dev --parallel",
    "dev:app": "pnpm dev --filter @bloghub/app",
    "inngest": "npx inngest-cli@latest dev -u http://localhost:3000/api/inngest",
    "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,md,json}\" --ignore-path .gitignore",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "prepare": "husky install",
    "with-env": "doppler run --",
    "test": "turbo test",
    "test:ui": "turbo test:ui",
    "test:reply": "turbo test:reply"
  },
  "dependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@types/prettier": "^2.7.3",
    "husky": "^8.0.3",
    "prettier": "^3.0.1",
    "prettier-plugin-tailwindcss": "^0.5.2",
    "turbo": "^1.10.12",
    "typescript": "^5.1.6"
  }
}